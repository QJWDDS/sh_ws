<?xml version="1.0"?>
<sdf version="1.6">
  <model name="sptballoon"> 
    <pose>40 0 43 0 0 0</pose>
    <static>false</static>

    <link name="x_link">
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>0.01</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.01</iyy>
          <iyz>0</iyz>
          <izz>0.01</izz>
        </inertia>
      </inertial>
    </link>

    <link name="y_link">
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>0.01</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.01</iyy>
          <iyz>0</iyz>
          <izz>0.01</izz>
        </inertia>
      </inertial>
    </link>

    <link name="z_link">
      <gravity>false</gravity>
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.1</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.1</iyy>
          <iyz>0</iyz>
          <izz>0.1</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <geometry>
          <sphere><radius>0.5</radius></sphere>
        </geometry>
        <material>
          <ambient>1.0 0.0 0.0 1.0</ambient>
          <diffuse>1.0 0.0 0.0 1.0</diffuse>
        </material>
      </visual>
      <collision name="collision">
        <geometry>
          <sphere><radius>0.5</radius></sphere>
        </geometry>
      </collision>
    </link>

    <joint name="x_axis_joint" type="prismatic">
      <parent>world</parent>
      <child>x_link</child>
      <axis>
        <xyz>1 0 0</xyz>
        <limit>
          <lower>-100</lower>
          <upper>100</upper>
          <velocity>4.0</velocity>
        </limit>
        <dynamics>
          <damping>0.5</damping>  <!-- 阻尼 -->
          <friction>0.1</friction>  <!-- 静摩擦 -->
        </dynamics>
      </axis>
    </joint>

    <joint name="y_axis_joint" type="prismatic">
      <parent>x_link</parent>
      <child>y_link</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-100</lower>
          <upper>100</upper>
          <velocity>4.0</velocity>
        </limit>
        <dynamics>
          <damping>0.5</damping>  <!-- 阻尼 -->
          <friction>0.1</friction>  <!-- 静摩擦 -->
        </dynamics>
      </axis>
    </joint>

    <joint name="z_axis_joint" type="prismatic">
      <parent>y_link</parent>
      <child>z_link</child>
      <axis>
        <xyz>0 0 1</xyz>  <!-- z轴方向 -->
        <limit>
          <lower>-100</lower>
          <upper>100</upper>
          <velocity>4.0</velocity>
        </limit>
        <dynamics>
          <damping>1.5</damping>
          <friction>1.0</friction>
        </dynamics>
      </axis>
    </joint>

    <plugin name="gz::sim::systems::JointPositionController" filename="libgz-sim8-joint-position-controller-system.so">
    <joint_name>y_axis_joint</joint_name>
    <!-- PID参数 -->
    <p_gain>4.0</p_gain>
    <i_gain>5.0</i_gain>
    <d_gain>1.0</d_gain>
    <i_clamp>100.0</i_clamp>
    <cmd_topic>/model/sptballoon/joint/y_axis_joint/0/cmd_pos</cmd_topic>
    </plugin>
  
    <plugin name="gz::sim::systems::JointPositionController" filename="libgz-sim8-joint-position-controller-system.so">
      <joint_name>z_axis_joint</joint_name>
      <p_gain>4.0</p_gain>
      <i_gain>5.0</i_gain>
      <d_gain>1.0</d_gain>
      <i_clamp>100.0</i_clamp>
    </plugin>
    <plugin name="gz::sim::systems::JointPositionController" filename="libgz-sim8-joint-position-controller-system.so">
      <joint_name>x_axis_joint</joint_name>
      <p_gain>4.0</p_gain>
      <i_gain>5.0</i_gain>
      <d_gain>1.0</d_gain>
      <i_clamp>100.0</i_clamp>
    </plugin>
  </model>
</sdf>